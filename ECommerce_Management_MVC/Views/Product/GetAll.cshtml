@model ProductViewModel


<div class=row>
    <div class="col-md-8">
        <h3 style="color:#F28123" class="mt-4 main-title position-relative">Products</h3>
    </div>
    <div class="col-md-4">
        <form asp-action="GetAll" class="input-group mb-3">
            <input type="search" name="searchString" class="form-control" placeholder="Product Name..." />
            <div class="input-group-append">
                <button type="submit" class="btn btn-dark">Search</button>
            </div>
        </form>
        <a asp-action="GetAll" class="btn btn-secondary">All Products</a>
    </div>
</div>


<div class="container">
    @if (User.IsInRole("Admin"))
    {
        <a class="mybtn btn" asp-action="GoToAddForm">Create New Product</a>
    }
    <div class="row mt-5">
        @foreach (var product in Model.Products)
        {
            <div class="col-lg-3 col-md-3 text-center">
                <div class="single-product-item">
                    <div class="product-image">
                        @if (product.Thumbnail != null)
                        {
                            <a><img id="profilePicture" alt="Profile" src="~/@product.Thumbnail" /></a>
                        }
                        else
                        {
                            <a><img id="picture" src="~/img/woocommercer.png" alt="Thumbnail" class="product-picture" /></a>
                        }
                    </div>
                    <h3>@product.Name</h3>
                    <p class="product-price"> @product.Price&#163; </p>
                    <a asp-controller="Order" asp-action="Add" asp-route-id="@product.Id" class="cart-btn"><i class="fas fa-shopping-cart"></i> Add to Cart</a>


                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="GoToEditForm" asp-route-id="@product.Id" class="cart-btn"><i class="fas fa-shopping-cart"></i> Edit</a>
                        <a asp-action="Delete" asp-route-id="@product.Id" class="cart-btn"><i class="fas fa-shopping-cart"></i> Delete</a>
                    }

                </div>
            </div>
        }
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="/Product/GetAll?term=@Model.Term&currentPage=@(Model.CurrentPage-1)" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                }
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    if (i == Model.CurrentPage)
                    {
                        <li class="page-item"><a class="page-link active" href="/Product/GetAll?term=@Model.Term&currentPage=@Model.CurrentPage">@i</a></li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link" href="/Product/GetAll?term=@Model.Term&currentPage=@Model.CurrentPage">@i</a></li>
                    }
                }
                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="/Product/GetAll?term=@Model.Term&currentPage=@(Model.CurrentPage+1)" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>


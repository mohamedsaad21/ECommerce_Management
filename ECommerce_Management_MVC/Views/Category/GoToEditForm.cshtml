@model CategoryViewModel
<form asp-action="SaveEditFormData" class="p-4 border rounded shadow-lg bg-light">
    <div class="form-row">
        <input type="hidden" asp-for="Id"/>
        <div class="form-group col-md-6 mb-3">
            <label asp-for="name" class="form-label fw-bold">Name</label>
            <input asp-for="name" class="form-control" name="name" placeholder="Enter name">
            <span asp-validation-for="name"></span>
        </div>

        <div class="form-group col-md-6 mb-3">
            <label asp-for="description" class="form-label fw-bold">Description</label>
            <input asp-for="description" class="form-control" placeholder="Enter description">
            <span asp-validation-for="description"></span>
        </div>
    </div>

    <div class="form-group mb-4">
        <label asp-for="thumbnail" class="form-label fw-bold">Thumbnail</label>
        <input asp-for="thumbnail" class="form-control" placeholder="Enter thumbnail">
        <span asp-validation-for="thumbnail"></span>
    </div>

    <button type="submit" class="btn btn-primary btn-lg w-100">Edit</button>
</form>


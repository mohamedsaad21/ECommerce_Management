@model CategoryViewModel
<form asp-action="SaveEditFormData" class="p-4 border rounded shadow-lg bg-light">
    <div class="form-row">
        <input type="hidden" asp-for="Id"/>
        <div class="form-group col-md-6 mb-3">
            <label asp-for="name" class="form-label fw-bold">Name</label>
            <input asp-for="name" class="form-control" name="name" placeholder="Enter name">
            <span asp-validation-for="name"></span>
        </div>

        <div class="form-group col-md-6 mb-3">
            <label asp-for="description" class="form-label fw-bold">Description</label>
            <input asp-for="description" class="form-control" placeholder="Enter description">
            <span asp-validation-for="description"></span>
        </div>
    </div>

    <div>
        <div class="input-group">
            <label class="custom-label">Thumbnail</label>
            @if (Model.thumbnail != null)
            {
                <img id="thumbnail" src="~/@Model.thumbnail" alt="Thumbnail" class="Thumbnail-picture" />
            }
            else
            {
                <img id="thumbnail" src="~/img/woocommercer.png" alt="Thumbnail" class="Thumbnail-picture" />
            }
        </div>
        <div class="custom-file mt-2">
            <input type="file"
                   accept="image/*"
                   asp-for="Thumbnail"
                   class="custom-file-input"
                   onchange="document.getElementById('thumbnail').src = window.URL.createObjectURL(this.files[0])" />
            <label class="custom-file-label" asp-for="Thumbnail">Choose picture...</label>
            <span asp-validation-for="Thumbnail" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary btn-lg w-100">Edit</button>
</form>


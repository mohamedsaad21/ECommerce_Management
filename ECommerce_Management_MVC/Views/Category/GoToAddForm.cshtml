@model CategoryViewModel
<form asp-action="SaveFormData" class="p-4 border rounded shadow-lg bg-light">
    <div class="form-group mb-3">
        <label asp-for="name" class="form-label fw-bold">Name</label>
        <input asp-for="name" class="form-control" placeholder="Enter Name">
    </div>
    <div class="form-group mb-3">
        <label asp-for="description" class="form-label fw-bold">Description</label>
        <input asp-for="description"  class="form-control" placeholder="Enter description">
    </div>
    <div>
        <div class="input-group">
            <label asp-for="Thumbnail" class="custom-label">Thumbnail</label>
            <img id="thumbnail" src="~/img/woocommercer.png" alt="Thumbnail" class="Thumbnail-picture" />
        </div>
        <div class="custom-file mt-2">
            <input type="file" id="customFile"
                   accept="image/*"
                   asp-for="Thumbnail"
                   class="custom-file-input"
                   onchange="document.getElementById('thumbnail').src = window.URL.createObjectURL(this.files[0])" />
            <label class="custom-file-label" for="customFile">Choose picture...</label>
            <span asp-validation-for="Thumbnail" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn mybtn btn-lg w-100 mt-3">Add Category</button>
</form>



@model List<Order>

@{
    ViewData["Title"] = "GetAll";
}

<h1>GetAll</h1>


<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>CustomerID</th>
            <th>Amount</th>
            <th>Shipping_Address</th>
            <th>Order_Address</th>
            <th>Order_Email</th>
            <th>Order_Date</th>
            <th>Order_Status</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.Customer_Id
            </td>
            <td>
                @item.amount
            </td>
            <td>
                @item.Shipping_Address
            </td>
            <td>
                @item.Order_Address
            </td>
            <td>
                @item.Order_Email
            </td>
            <td>
                @item.Order_Date
            </td>
            <td>
                @item.Order_Status
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a> |
                
            </td>
        </tr>
}
    </tbody>
</table>
